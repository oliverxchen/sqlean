select * from table1 left join table2
using (field_a)

---

SELECT
    *,
FROM
    table1
LEFT OUTER JOIN
    table2
USING (field_a)

---

Tree(
    "query_file",
    [
        Tree(
            "query_expr",
            [
                Tree("select_statement", [Token("SELECT", "select")]),
                Tree("select_list", [Tree("select_item_unaliased", [Token("STAR", "*")])]),
                Token("FROM", "from"),
                Tree(
                    "from_clause",
                    [
                        Tree(
                            "join_operation_with_condition",
                            [
                                Tree("simple_table_name", [Token("CNAME", "table1")]),
                                Tree("left_join", []),
                                Tree("simple_table_name", [Token("CNAME", "table2")]),
                                Tree(
                                    "using_clause",
                                    [
                                        Token("USING", "using"),
                                        Token("LPAR", "("),
                                        Tree("using_list", [Token("FIELD_NAME", "field_a")]),
                                        Token("RPAR", ")"),
                                    ],
                                ),
                            ],
                        )
                    ],
                ),
            ],
        )
    ],
)
